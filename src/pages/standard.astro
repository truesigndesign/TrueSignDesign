---
import DashLayout3 from "src/layouts/DashLayout3.astro";
import { getOptimizedImage } from "@js/utils";
import landingImage from "@assets/images/landing.jpg"; // The asset must live in src
import DashLayout2 from "src/layouts/DashLayout2.astro";
const optimizedImage = await getOptimizedImage(landingImage);
---

<DashLayout3
  title="Standard Monthly Agreement"
  description="We Specialise In Service Based Websites"
  preloadedImage={optimizedImage}
>
  











  
  
  







  




<section style="
  padding: calc(var(--sectionPadding) / 2) var(--sectionPadding);
  padding-bottom: 4rem; /* Apply the bottom padding here */
  position: relative;
  z-index: 1;
  background-color: #f7f7f7;
">
  <div style="
    width: 100%;
    max-width: 80rem;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: clamp(3rem, 6vw, 4rem);
  ">
    <!-- Heading area -->
    <div style="
      text-align: center;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    ">
    </div>

    <!-- Your Tally iframe with the same grid spacing approach -->
    <div style="
      width: 100%;
      max-width: 52.875rem;
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 0.75rem;
    ">
      <!-- Full-width column for the iframe -->
      <div style="grid-column: 1 / span 12;">
        <iframe
          data-tally-src="https://tally.so/embed/31DgxO?alignLeft=1&transparentBackground=1&dynamicHeight=1"
          loading="lazy"
          width="100%"
          height="1400"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          title="Monthly Subscription - Standard"
          class="tally-iframe"
          style="border: none;"
        ></iframe>
      </div>
    </div>
  </div>
</section>





<script>
  var d = document, w = "https://tally.so/widgets/embed.js", v = function () {
    if ("undefined" != typeof Tally) Tally.loadEmbeds();
    else if (d.querySelector('script[src="' + w + '"]') == null) {
      var s = d.createElement("script");
      s.src = w;
      s.onload = v;
      s.onerror = v;
      d.body.appendChild(s);
    }
  };
  v();
</script>
</DashLayout3>
